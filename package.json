{
  "name": "crypto-tgalert",
  "version": "2.1.0",
  "description": "Personal crypto intelligence terminal via Telegram",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop crypto-tgalert",
    "pm2:restart": "pm2 restart crypto-tgalert",
    "pm2:logs": "pm2 logs crypto-tgalert",
    "pm2:monitor": "pm2 monit",
    "deploy": "npm run build && npm run pm2:start",
    "backup": "mkdir -p backups && cp -r data logs backups/backup-$(date +%Y%m%d-%H%M%S)/",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "analyze-debug": "npx ts-node scripts/analyze-debug.ts",
    "debug-status": "npx ts-node scripts/mark-debug-fixed.ts"
  },
  "keywords": [
    "telegram",
    "crypto",
    "bitcoin",
    "alerts",
    "binance",
    "trading"
  ],
  "author": "crypto-trader",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/sqlite3": "^3.1.11",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "nodemon": "^3.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "telegraf": "^4.15.0",
    "winston": "^3.17.0",
    "ws": "^8.14.0"
  }
}
